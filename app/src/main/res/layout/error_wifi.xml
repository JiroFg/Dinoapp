<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_alert2"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:background="@drawable/bg_alert"
            android:padding="25dp"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/icon_dialog"
                android:src="@drawable/icon_wifi"
                android:padding="5dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/ll"
                app:layout_constraintTop_toTopOf="@id/ll"
                app:layout_constraintStart_toStartOf="@+id/ll"
                app:layout_constraintEnd_toEndOf="@id/ll"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Sin conexión a\n internet"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/button_dialog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#45c62c"
                android:lineHeight="20dp"
                android:paddingHorizontal="30dp"
                android:paddingVertical="5dp"
                android:text="Reintentar \n conexión"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="*Por favor verifica tu \n conexión a internet"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>